{
  "name": "anonymous-reporting-system",
  "version": "1.0.0",
  "description": "Privacy-focused anonymous reporting platform using FHE encryption",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.js --network sepolia",
    "verify": "hardhat run scripts/verify.js --network sepolia",
    "interact": "hardhat run scripts/interact.js --network sepolia",
    "simulate": "hardhat run scripts/simulate.js --network sepolia",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "dev": "http-server public -p 3000 -c-1 --cors",
    "lint": "npm run lint:sol && npm run lint:js",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:js": "eslint 'scripts/**/*.js' 'test/**/*.js'",
    "lint:fix": "npm run lint:sol:fix && npm run lint:js:fix",
    "lint:sol:fix": "solhint 'contracts/**/*.sol' --fix",
    "lint:js:fix": "eslint 'scripts/**/*.js' 'test/**/*.js' --fix",
    "format": "prettier --write 'contracts/**/*.sol' 'scripts/**/*.js' 'test/**/*.js'",
    "format:check": "prettier --check 'contracts/**/*.sol' 'scripts/**/*.js' 'test/**/*.js'",
    "security": "npm run security:audit && npm run security:check",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm run lint:sol",
    "security:fix": "npm audit fix",
    "size-check": "hardhat size-contracts",
    "size": "hardhat size-contracts",
    "gas-report": "REPORT_GAS=true npm test",
    "prepare": "husky install",
    "pre-commit": "npm run lint && npm run format:check",
    "pre-push": "npm test",
    "ci": "npm run lint && npm run format:check && npm run compile && npm test && npm run security:audit"
  },
  "keywords": [
    "blockchain",
    "anonymous-reporting",
    "whistleblowing",
    "privacy",
    "fhe",
    "fully-homomorphic-encryption",
    "ethereum",
    "solidity",
    "hardhat"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-contract-sizer": "^2.10.0",
    "solidity-coverage": "^0.8.5",
    "chai": "^4.3.10",
    "solhint": "^4.0.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "prettier-plugin-solidity": "^1.2.0",
    "husky": "^8.0.3"
  },
  "dependencies": {
    "@fhevm/solidity": "^0.7.0",
    "ethers": "^6.8.0",
    "dotenv": "^16.3.1",
    "http-server": "^14.1.1"
  }
}