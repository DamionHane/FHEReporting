# =============================================================================
# Anonymous Reporting System - Environment Configuration
# =============================================================================
#
# IMPORTANT: This is a template file. Copy to .env and fill in your values.
# NEVER commit .env file to version control!
#
# Usage: cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Network Configuration
# -----------------------------------------------------------------------------

# Sepolia Testnet RPC URL
# Get free API key from: https://infura.io or https://alchemy.com
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Ethereum Mainnet RPC URL (for production deployment)
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Local development network
LOCALHOST_RPC_URL=http://127.0.0.1:8545

# -----------------------------------------------------------------------------
# Account Configuration
# -----------------------------------------------------------------------------

# Private Key for deployment (NEVER share this!)
# Get from MetaMask: Account Details -> Export Private Key
# WARNING: Ensure this account has enough ETH for deployment
PRIVATE_KEY=your_private_key_here_64_characters

# Deployer Address (for verification)
DEPLOYER_ADDRESS=0xYourDeployerAddressHere

# Authority Address (contract owner)
# This address will have admin privileges
AUTHORITY_ADDRESS=0xYourAuthorityAddressHere

# -----------------------------------------------------------------------------
# Contract Verification
# -----------------------------------------------------------------------------

# Etherscan API Key for contract verification
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Block explorer URLs
ETHERSCAN_URL=https://etherscan.io
SEPOLIA_ETHERSCAN_URL=https://sepolia.etherscan.io

# -----------------------------------------------------------------------------
# Gas Configuration
# -----------------------------------------------------------------------------

# Gas Price (in Gwei) - set to 'auto' for automatic calculation
GAS_PRICE=auto

# Gas Limit for transactions
GAS_LIMIT=8000000

# Enable gas reporting during tests
REPORT_GAS=false

# CoinMarketCap API Key for gas price in USD
# Get from: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------

# Enable security checks
SECURITY_CHECKS=true

# Audit level for npm audit (low, moderate, high, critical)
AUDIT_LEVEL=moderate

# Enable contract size checking
CHECK_CONTRACT_SIZE=true

# Maximum contract size (in bytes) - Ethereum limit is 24576
MAX_CONTRACT_SIZE=24576

# -----------------------------------------------------------------------------
# Performance Configuration
# -----------------------------------------------------------------------------

# Compiler optimization runs
# Higher number = more gas-efficient runtime, slower deployment
# Lower number = cheaper deployment, higher runtime costs
OPTIMIZER_RUNS=200

# Enable optimizer
OPTIMIZER_ENABLED=true

# EVM version target
EVM_VERSION=cancun

# Enable contract flattening for verification
FLATTEN_CONTRACTS=true

# -----------------------------------------------------------------------------
# Testing Configuration
# -----------------------------------------------------------------------------

# Test network chain ID
TEST_CHAIN_ID=31337

# Test timeout (milliseconds)
TEST_TIMEOUT=60000

# Coverage threshold (percentage)
COVERAGE_THRESHOLD=80

# Enable coverage reporting
ENABLE_COVERAGE=true

# -----------------------------------------------------------------------------
# Code Quality Configuration
# -----------------------------------------------------------------------------

# Enable linting
ENABLE_LINTING=true

# Enable prettier formatting checks
ENABLE_PRETTIER=true

# Maximum line length for code
MAX_LINE_LENGTH=120

# Enable TypeScript checking (if using TypeScript)
ENABLE_TYPESCRIPT=false

# -----------------------------------------------------------------------------
# CI/CD Configuration
# -----------------------------------------------------------------------------

# CI environment detection
CI=false

# Skip interactive prompts in CI
NON_INTERACTIVE=false

# Codecov token for coverage reports
CODECOV_TOKEN=your_codecov_token_here

# GitHub token for automated releases
GITHUB_TOKEN=your_github_token_here

# -----------------------------------------------------------------------------
# Investigator Configuration (Application Specific)
# -----------------------------------------------------------------------------

# Pre-authorized investigator addresses (comma-separated)
# These addresses will be added as investigators after deployment
INVESTIGATOR_ADDRESSES=0xInvestigator1Address,0xInvestigator2Address,0xInvestigator3Address

# Enable investigator auto-assignment
AUTO_ASSIGN_INVESTIGATORS=false

# Default investigator for new reports
DEFAULT_INVESTIGATOR=0xDefaultInvestigatorAddress

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------

# Frontend deployment URL
FRONTEND_URL=https://anonymous-reporting.vercel.app

# API endpoint for frontend
API_ENDPOINT=https://api.anonymous-reporting.com

# Enable CORS
ENABLE_CORS=true

# Allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://anonymous-reporting.vercel.app

# -----------------------------------------------------------------------------
# Database Configuration (if using off-chain storage)
# -----------------------------------------------------------------------------

# Database connection string
DATABASE_URL=mongodb://localhost:27017/anonymous-reporting

# Redis URL for caching
REDIS_URL=redis://localhost:6379

# Enable database logging
DB_LOGGING=false

# -----------------------------------------------------------------------------
# Notification Configuration
# -----------------------------------------------------------------------------

# Email service for notifications
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=noreply@anonymous-reporting.com

# Webhook URL for notifications
WEBHOOK_URL=https://your-webhook-endpoint.com/notify

# Enable email notifications
ENABLE_EMAIL_NOTIFICATIONS=false

# Enable webhook notifications
ENABLE_WEBHOOK_NOTIFICATIONS=false

# -----------------------------------------------------------------------------
# Monitoring & Logging
# -----------------------------------------------------------------------------

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable detailed logging
VERBOSE_LOGGING=false

# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=false

# -----------------------------------------------------------------------------
# Rate Limiting & DoS Protection
# -----------------------------------------------------------------------------

# Enable rate limiting
ENABLE_RATE_LIMITING=true

# Maximum requests per minute per IP
RATE_LIMIT_MAX_REQUESTS=60

# Rate limit window (minutes)
RATE_LIMIT_WINDOW=1

# Enable DDoS protection
ENABLE_DDOS_PROTECTION=true

# Maximum gas per transaction
MAX_GAS_PER_TX=500000

# -----------------------------------------------------------------------------
# Backup & Recovery
# -----------------------------------------------------------------------------

# Backup directory
BACKUP_DIR=./backups

# Enable automatic backups
AUTO_BACKUP=false

# Backup interval (hours)
BACKUP_INTERVAL=24

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------

# Development mode
NODE_ENV=development

# Enable hot reload
HOT_RELOAD=true

# Enable debug mode
DEBUG=false

# Port for local development server
DEV_SERVER_PORT=3000

# -----------------------------------------------------------------------------
# Advanced Configuration
# -----------------------------------------------------------------------------

# Custom Hardhat network configuration
HARDHAT_NETWORK=hardhat

# Fork mainnet for testing (requires Alchemy/Infura)
FORK_MAINNET=false
FORK_BLOCK_NUMBER=latest

# Enable contract verification retry
VERIFY_RETRY=true
VERIFY_MAX_RETRIES=3

# Deployment confirmation blocks
CONFIRMATION_BLOCKS=6

# Enable gas optimization suggestions
GAS_OPTIMIZATION_SUGGESTIONS=true

# =============================================================================
# End of Configuration
# =============================================================================
#
# Notes:
# - Replace all placeholder values with actual configuration
# - Ensure .env file is added to .gitignore
# - Use strong, unique private keys
# - Regularly rotate sensitive credentials
# - Review and update configuration before deployment
# - Test on testnet before mainnet deployment
#
# Security Checklist:
# ✓ Private keys are secure and not shared
# ✓ API keys have appropriate permissions
# ✓ Rate limiting is enabled
# ✓ Security checks are enabled
# ✓ Gas limits are reasonable
# ✓ Contract size is within limits
#
# =============================================================================
